<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".dndPage5Activity">
    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:minHeight="900dp">
        <Button
                android:id="@+id/btnNextAlignmentPage"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:text="@string/next_page"
                android:onClick="dndPageNext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/dndBackstoryDesc"/>
        <TextView
                android:text="What is your backstory?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/charClass" android:textSize="45sp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <RadioGroup
                android:layout_width="322dp"
                android:layout_height="444dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/charClass" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:id="@+id/radioGroupAlignment">

            <RadioButton
                    android:id="@+id/dndAcolyte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="backstoryCheck"
                    android:text="Acolyte"
                    android:textAlignment="textStart"
                    android:textSize="30sp"/>

            <RadioButton
                    android:id="@+id/dndCharlatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="backstoryCheck"
                    android:text="Charlatan"
                    android:textAlignment="textStart"
                    android:textSize="30sp"/>

            <RadioButton
                    android:id="@+id/dndCriminal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="backstoryCheck"
                    android:text="Criminal"
                    android:textAlignment="textStart"
                    android:textSize="30sp"/>

            <RadioButton
                    android:id="@+id/dndEntertainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="backstoryCheck"
                    android:text="Entertainer"
                    android:textAlignment="textStart"
                    android:textSize="30sp"/>

            <RadioButton
                    android:id="@+id/dndFolkhero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="backstoryCheck"
                    android:text="Folk Hero"
                    android:textAlignment="textStart"
                    android:textSize="30sp"/>

            <RadioButton
                    android:id="@+id/dndGuildartisan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="backstoryCheck"
                    android:text="Guild Artisan"
                    android:textAlignment="textStart"
                    android:textSize="30sp"/>

            <RadioButton
                    android:id="@+id/dndHermit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="backstoryCheck"
                    android:text="Hermit"
                    android:textAlignment="textStart"
                    android:textSize="30sp"/>

            <RadioButton
                    android:id="@+id/dndNoble"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="backstoryCheck"
                    android:text="Noble"
                    android:textAlignment="textStart"
                    android:textSize="30sp"/>

            <RadioButton
                    android:id="@+id/dndOutlander"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="backstoryCheck"
                    android:text="Outlander"
                    android:textAlignment="textStart"
                    android:textSize="30sp"/>
            <RadioButton
                android:id="@+id/dndSage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="backstoryCheck"
                android:text="Sage"
                android:textAlignment="textStart"
                android:textSize="30sp"/>
            <RadioButton
                android:id="@+id/dndSailor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="backstoryCheck"
                android:text="Sailor"
                android:textAlignment="textStart"
                android:textSize="30sp"/>
            <RadioButton
                android:id="@+id/dndSoldier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="backstoryCheck"
                android:text="Soldier"
                android:textAlignment="textStart"
                android:textSize="30sp"/>
            <RadioButton
                android:id="@+id/dndUrchin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="backstoryCheck"
                android:text="Urchin"
                android:textAlignment="textStart"
                android:textSize="30sp"/>
        </RadioGroup>
        <TextView
                android:id="@+id/dndBackstoryDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupAlignment"/>
        <TextView
                android:id="@+id/dndBackstory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:textAlignment="center"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>